[Unit]
Description=PUTER FastAPI Server
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=johndaniher
Group=johndaniher
WorkingDirectory=/opt/puter/server
ExecStart=/opt/puter/server/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target